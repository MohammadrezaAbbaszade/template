<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/account_toolbar"
        >

        <ImageButton
            android:id="@+id/account_toolbar_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:tint="@color/green"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_back"
            android:layout_marginRight="10dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/account_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="حساب کاربری"
            android:textColor="@color/custom_green" />



    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:layout_below="@id/account_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:id="@+id/account_toolbar_account"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:focusable="true">


            <TextView
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="حساب من"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                app:srcCompat="@drawable/ic_user"
                android:layout_width="30dp"
                android:layout_marginRight="5dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout

            android:layout_marginRight="8dp"
            android:clickable="true"
            android:id="@+id/account_toolbar_address"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:focusable="true">


            <TextView
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="آدرس ها"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                app:srcCompat="@drawable/ic_location"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:id="@+id/account_toolbar_payment"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:focusable="true">


            <TextView
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="مالی"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                app:srcCompat="@drawable/ic_settings_cash_back"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:id="@+id/account_toolbar_log_out"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:focusable="true">


            <TextView
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="خروج"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                app:srcCompat="@drawable/ic_settings_logout"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>